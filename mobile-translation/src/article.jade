//- Article
.article-view
  .article-header
    .navigation
      .back(@click='back')
      .title Plants in space
    .actions
      .more
      button.publish Publish
  .document
    .paragraph
      .sentence(:class='{highlight: data.selection == 0}', v-html='data.content[0]')
      .sentence(:class='{highlight: data.selection == 1}', v-html='data.content[1]') 
      .sentence(:class='{highlight: data.selection == 2}', v-html='data.content[2]') 
      .sentence(:class='{highlight: data.selection == 3}', v-html='data.content[3]') 
      .sentence(:class='{highlight: data.selection == 4}', v-html='data.content[4]') 
      .sentence(:class='{highlight: data.selection == 5}', v-html='data.content[5]')
      .sentence(:class='{highlight: data.selection == 6}', v-html='data.content[6]') 
  .proposal-card
    .header
      .title Proposed translation
      .navigation
        .prev(:class='{disabled: data.selection == 0}', @click='prev()')
        .next(@click='next()')
    .translation(v-html='data.mt[data.targetLang][data.selection]')
    .actions
      button.apply Apply
      button.primary.edit Edit translation
